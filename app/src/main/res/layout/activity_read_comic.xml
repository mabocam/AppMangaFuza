<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1D20"
    tools:context=".ReadComicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_read_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#2E3339"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back_read"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_return"
            android:contentDescription="Nút quay lại"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_comic_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Tên truyện - Chapter 1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back_read"
            app:layout_constraintEnd_toStartOf="@id/btn_more_read"
            app:layout_constraintHorizontal_bias="0.5"/>

        <ImageView
            android:id="@+id/btn_more_read"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_more"
            android:contentDescription="Tùy chọn khác"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/comic_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_read_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/comic_images_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ame_to_kimi_to"
                android:adjustViewBounds="true"
                android:contentDescription="Trang truyện 1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ame_to_kimi_to"
                android:adjustViewBounds="true"
                android:contentDescription="Trang truyện 2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ame_to_kimi_to"
                android:adjustViewBounds="true"
                android:contentDescription="Trang truyện 3"/>

            <Button
                android:id="@+id/btn_next_chapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHAP TIẾP THEO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/button_next_chapter_bg"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>